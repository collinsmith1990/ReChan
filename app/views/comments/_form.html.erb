<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <li>
      <%= f.label :commenter %>
      <%= f.text_field :commenter, class: "form-control" %>
    </li>
    <li>
      <%= f.label :content %>
      <%= f.text_field :content, class: "form-control" %>
    </li>
    <li>
      <%= f.submit "Create Comment", class: "btn btn-primary" %>
    </li>
  <% end %>
  </div>
</div>
