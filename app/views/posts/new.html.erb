<div class="col-md-6 col-md-offset-3">

  <ul class="nav nav-tabs">
    <li class="active"><a href="#text-post" data-toggle="tab">Text Post</a></li>
    <li><a href="#link-post" data-toggle="tab">Link Post</a></li>
  </ul>

  <div class="tab-content">

    <div class="tab-pane active" id="text-post">
      <%= form_for(@post, html: { id: "postform" }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :title, class: "control-label" %>
          <%= f.text_field :title, class: "form-control" %>
          <i></i>
        </div>

        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>

        <%= f.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
    </div>

    <div class="tab-pane" id="link-post">
      <%= form_for(@post, html: { id: "linkpostform" }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :title, class: "control-label" %>
          <%= f.text_field :title, class: "form-control" %>
          <i></i>
        </div>

        <div class="form-group">
          <%= f.label :link, class: "control-label" %>
          <%= f.text_field :link, class: "form-control" %>
          <i></i>
        </div>

        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>

        <%= f.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
    </div>

  </div>

</div>
