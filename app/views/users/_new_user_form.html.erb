<div class="col-md-10 col-md-offset-1">
  <%= form_tag(users_path, method: "post", id: "newuserform") do %>
    <div class="form-group">
      <%= label_tag(:user_name, "Username", class: "control-label") %>
      <%= text_field_tag("user[user_name]", "", class: "form-control") %>
      <i></i>
    </div>
    <div class="form-group">
      <%= label_tag(:password, "Password", class: "control-label") %>
      <%= password_field_tag("user[password]", "", id: "password", class: "form-control") %>
      <i></i>
    </div>
    <div class="form-group">
      <%= label_tag(:password_confirmation, "Password confirmation", class: "control-label") %>
      <%= password_field_tag("user[password_confirmation]", "", class: "form-control") %>
      <i></i>
    </div>
    <%= submit_tag("Create account", class: "btn btn-primary") %>
  <% end %>
</div>
