<%= form_for([@post, @comment]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <% if current_user %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    <% end %>

    <%= f.label :comment %>
    <%= f.text_area :content, class: "form-control" %>

    <%= f.submit "Create Comment", class: "btn btn-primary" %>
<% end %>

