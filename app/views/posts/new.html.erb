<div class="col-md-6 col-md-offset-3">

  <ul class="nav nav-tabs">
    <li class="active"><a href="#text-post" data-toggle="tab">Text Post</a></li>
    <li><a href="#link-post" data-toggle="tab">Link Post</a></li>
  </ul>

  <div class="tab-content">

    <div class="tab-pane active" id="text-post">
      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <% if current_user %>
          <%= f.hidden_field :user_id, value: current_user.id %>
        <% end %>

        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>

        <%= f.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
    </div>

    <div class="tab-pane" id="link-post">
      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <% if current_user %>
          <%= f.hidden_field :user_id, value: current_user.id %>
        <% end %>

        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :link %>
        <%= f.text_field :link, class: "form-control" %>

        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control" %>

        <%= f.submit "Create Post", class: "btn btn-primary" %>
    <% end %>
    </div>

  </div>

</div>
