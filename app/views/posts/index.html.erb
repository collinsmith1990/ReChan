<div class="container">
  <div class="col-md-8 col-md-offset-1">
    <ul>
      <% @posts.each do |post| %>
          <li class="post">
            <%= link_to post.title, post_path(post) %>
          </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-3">
    <%= link_to "Create a post", new_post_path, class: "btn btn-default" %> 
  </div>
</div>
