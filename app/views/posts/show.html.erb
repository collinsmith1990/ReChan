<div class="col-md-6 col-md-offset-3">
  <p class="post">
    <h3><%= link_to_post(@post) %></h3>
    <% if current_user?(@post.user) %>
      <div class="delete-link"><%= link_to "delete", @post, method: :delete %></div>
    <% end %>
    <% if @post.user %>
      <%= link_to @post.user.display_name, user_path(@post.user) %>
    <% else %>
      Anonymous
    <% end %>
    <%= @post.content %>
  </p>
  <div class="comments-form">
    <%= render 'comments/form' %>
  </div>
  <div class="comments">
    <%= will_paginate @comments %>
    <%= render @comments %>
    <%= will_paginate @comments %>
  </div>
</div>
